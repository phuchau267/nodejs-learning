<style>
  .card-course-item {
  margin-top: 16px; }

.user-avatar {
  width: 28px;
  height: 28px;
  border-radius: 50%;
  margin-right: 4px; }

.disabled {
  pointer-events: none; }

.followbtn {
  display: block; }

.loginModal {
